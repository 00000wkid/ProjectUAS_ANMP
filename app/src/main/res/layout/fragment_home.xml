<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/waitressCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/waitressImageView"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="8dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/waitressNameTextView"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/waitressImageView"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-91dp"
                android:layout_marginEnd="124dp"
                android:text="Nama Waitress" />

            <TextView
                android:id="@+id/waitressRoleTextView"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/waitressNameTextView"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="155dp"
                android:text="Waitress" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/serveNewCustomerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serve new customer"
        android:layout_below="@id/waitressCardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/serveImage"
        android:layout_width="328dp"
        android:layout_height="191dp"
        android:layout_below="@id/serveNewCustomerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        tools:srcCompat="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/tableNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/serveImage"
        android:layout_marginTop="16dp"
        android:hint="Enter table number" />

    <Button
        android:id="@+id/btnSubmitTableNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tableNumberEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="31dp"
        android:text="Submit" />


</RelativeLayout>
